{
  "name": "patternplate-server",
  "version": "0.15.0-beta1",
  "description": "Programmatically serve atomic patterns via a REST API",
  "main": "library/",
  "scripts": {
    "start": "node --harmony binary/patternplate-server.js",
    "console": "node --harmony binary/patternplate-server-console.js",
    "commitmsg": "conventional-changelog-lint -e",
    "commit": "git-cz",
    "changelog": "conventional-changelog --preset angular --infile changelog.md --same-file --output-unreleased",
    "push": "git push && git push --tags && hub release create \"v$(cat .git/RELEASE_VERSION.tmp)\" --message=\"v$(cat .git/RELEASE_VERSION.tmp)\n$(cat .git/COMMITMSG.tmp)\" && npm publish && rm .git/RELEASE_VERSION.tmp && rm .git/COMMITMSG.tmp",
    "release": "npm version $(conventional-recommended-bump -p angular)",
    "test": "eslint source/**/*.js && jsonlint-cli **/*.json",
    "build": "npm run clean && npm run build-server && npm run build-assets",
    "build-server": "npm run clean && npm run babel",
    "build-assets": "browserify assets/script/content.js | uglifyjs > assets/script/content.bundle.js",
    "watch": "npm run build && npm run watch-assets & npm run watch-server",
    "watch-server": "npm run babel -- --watch",
    "watch-assets": "chokidar 'assets/script/**/*' --initial --ignore '**/*.bundle.js' -c 'npm run build-assets'",
    "babel": "babel source --out-dir ./",
    "clean": "rm -rf application binary configuration library assets",
    "preversion": "npm run build && npm test",
    "version": "npm run changelog && git add . && echo \"$(conventional-changelog -p angular)\" > .git/COMMITMSG.tmp",
    "postversion": "echo $(git log -1 --pretty=%B HEAD^..HEAD) > .git/RELEASE_VERSION.tmp && git tag -d v$(cat .git/RELEASE_VERSION.tmp) && git commit --amend -m \"chore(release): $(cat .git/RELEASE_VERSION.tmp)\n$(cat .git/COMMITMSG.tmp)\" && git tag -a v$(cat .git/RELEASE_VERSION.tmp) -m \"$(cat .git/COMMITMSG.tmp)\""
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog-lint"
    }
  },
  "bin": {
    "patternplate-server": "binary/patternplate-server.js"
  },
  "repository": {
    "type": "git",
    "url": "sinnerschrader/patternplate-server"
  },
  "keywords": [
    "patternplate"
  ],
  "author": {
    "name": "Team UX",
    "email": "team-ux@sinnerschrader.com"
  },
  "contributors": [
    {
      "name": "Paul Bienkowski",
      "email": "paul.bienkowski@sinnerschrader.com"
    },
    {
      "name": "Mario Nebl",
      "email": "mario.nebl@sinnerschrader.com"
    },
    {
      "name": "Markus Wolf",
      "email": "markus.wolf@sinnerschrader.com"
    }
  ],
  "license": "MIT",
  "engines": {
    "iojs": ">= 1.4.3",
    "node": ">= 0.12.0",
    "npm": ">= 2.5.1"
  },
  "dependencies": {
    "app-root-path": "^1.0.0",
    "archiver": "^0.14.4",
    "babel-polyfill": "^6.5.0",
    "babel-runtime": "^5.8.24",
    "boilerplate-server": "^0.11.1",
    "btoa": "^1.1.2",
    "chalk": "^1.1.1",
    "compare-semver": "^1.1.0",
    "core-util-is": "^1.0.1",
    "denodeify": "^1.2.1",
    "duration": "^0.2.0",
    "find-root": "^0.1.1",
    "git-rev": "^0.2.1",
    "koa-cors": "0.0.16",
    "lodash": "^3.9.3",
    "lodash.merge": "^3.3.1",
    "lodash.omit": "^3.1.0",
    "lru-cache": "^2.6.3",
    "marked": "^0.3.3",
    "memoize-promise": "^0.2.2",
    "memory-streams": "^0.1.0",
    "minimatch": "^2.0.10",
    "minimist": "^1.1.1",
    "mkdirp": "^0.5.1",
    "ncp": "^2.0.0",
    "node-core-module-names": "^1.1.0",
    "normalize.less": "^1.0.0",
    "object-sizeof": "^1.0.6",
    "pascal-case": "^1.1.0",
    "path-exists": "^2.0.0",
    "pretty-data": "^0.40.0",
    "q-io": "^1.12.0",
    "rc": "^1.0.1",
    "react": ">= 0.13",
    "require-all": "^1.0.0",
    "resolve": "^1.1.6",
    "rimraf": "^2.5.1",
    "rubber-band": "^0.1.3",
    "semver": "^4.3.6",
    "sprintf": "^0.1.5",
    "throat": "^2.0.2",
    "through": "^2.3.7",
    "try-require": "^1.2.1"
  },
  "devDependencies": {
    "babel": "^5.2.17",
    "babel-eslint": "^4.1.8",
    "browserify": "^13.0.0",
