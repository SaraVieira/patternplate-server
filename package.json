    "conventional-changelog-cli": "^1.1.1",
    "conventional-changelog-lint": "^0.1.10",
    "conventional-recommended-bump": "^0.1.1",
    "cz-conventional-changelog-lint": "^0.1.2",
    "eslint": "^2.0.0",
    "eslint-config-xo": "^0.10.1",
    "eslint-plugin-babel": "^3.1.0",
    "husky": "^0.11.1",
    "jsonlint": "^1.6.2",
    "jsonlint-cli": "^0.2.7",
    "less": "^2.5.0",
    "less-plugin-autoprefix": "^1.4.1",
    "less-plugin-clean-css": "^1.5.0",
    "less-plugin-npm-import": "^2.0.0",
    "lodash": "^4.0.1",
    "react": "^0.14.7",
    "react-dom": "^0.14.7",
    "uglify-js": "^2.4.23"
  }
}
