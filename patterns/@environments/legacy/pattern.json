{
	"name": "legacy",
	"version": "0.1.0",
	"exclude": ["ecospheres/**"],
	"formats": ["js", "css", "less"],
	"conditional-comment": "lte IE 8",
	"environment": {
		"transforms": {
			"browserify": {
				"transforms": {
					"envify": {
						"opts": {
							"BROWSER": "legacy"
						}
					}
				}
			},
			"less": {
				"opts": {
					"globalVars": {
						"global-is-legacy": true
					}
				},
				"plugins": {
					"autoprefix": {
						"opts": {
							"browsers": ["ie 8"]
						}
					},
					"clean-css": {
						"opts": {
							"compatibility": "ie8"
						}
					}
				}
			},
			"react-jsx": {
				"opts": {
					"context": {
						"env": "legacy"
					}
				}
			}
		}
	}
}
